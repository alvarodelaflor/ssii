    <Button
        android:id="@+id/send_vote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enviar voto"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"/>

</RelativeLayout>